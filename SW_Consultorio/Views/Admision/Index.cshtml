@model List<SW_Consultorio.Models.SP_ObtenerCitados_Result>
@{
    ViewBag.Title = "Admision";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section style
{
    <head>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    </head>
}

<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Citas Registrados</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">
                        <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>DNI</th>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Fecha</th>
                                    <th>Observacion</th>
                                    <th>Hora Inicio</th>
                                    <th> </th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {
                                <tbody id="tbodyData">
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Dni)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Apellido)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaAtencion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Obervacion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InicioAtencion)
                                        </td>                                        
                                        <td style="text-align:center">
                                            <button class="btn btn-primary" type="button" onclick="PasarCita(@Html.DisplayFor(modelItem => item.CitaID))"><span class="fa fa-folder">  Admision</span></button>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Script-->
<script>

    function PasarCita(id) {

        jQuery.ajax({
            url: '@Url.Action("CambiaCitaAdmision","Admision")' + '/' + id,
            type: 'GET',
            dataType: 'json',
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                if (data.resultado) {
                    location.reload();
                    Swal.fire(
                        'Llego!',
                        'Paciente esperando consulta',
                        'success'
                    )
                } else {
                    alertanot();
                }
            }
        });
    }


</script>
<!--Script-->
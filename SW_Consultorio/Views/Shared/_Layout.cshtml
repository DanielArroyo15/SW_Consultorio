<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="images/favicon.ico" type="image/ico" />

    <title>@ViewBag.Title | San Tooth</title>

    <!-- Bootstrap -->
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/vendors/fontawesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- NProgress -->
    <link href="~/vendors/nprogress/nprogress.css" rel="stylesheet" />
    <!-- Animate.css -->
    <link href="~/vendors/animate.css/animate.min.css" rel="stylesheet" />


    <!-- Custom Theme Style -->
    <link href="~/Content/css/custom.min.css" rel="stylesheet" />

    @RenderSection("style", required: false)

</head>
<body class="nav-md">
    @{
        SW_Consultorio.Models.Usuario oUsuario = ((SW_Consultorio.Models.Usuario)Session["Usuario"]);
    }
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="index.html" class="site_title"><i class="fa fa-hospital-o"></i> <span>Clinica Dental</span></a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            <img src="~/Content/images/user.png" alt="Usuario" class="img-circle profile_img">
                        </div>
                        <div class="profile_info">
                            <span>Bienvenido</span>
                            <h2>@(oUsuario.Nombre)</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->
                    <br />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>Panel de Control</h3>
                            <ul class="nav side-menu">

                                @{
                                    if (oUsuario.PerfilID == 1)
                                    {
                                        <li>
                                            <a><i class="fa fa-home"></i> Administracion <span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu">
                                                <li><a href="index.html"> Usuario</a></li>
                                                <li><a href="@Url.Action("ListaDoctor","Doctor")"> Medicos</a></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a><i class="fa fa-bar-chart-o"></i> Finanzas <span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu">
                                                <li><a href="chartjs.html"> Contabilidad </a></li>
                                            </ul>
                                        </li>
                                    }
                                }
                                <li>
                                    <a><i class="fa fa-edit"></i> Mantenimiento <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="@Url.Action("ListaPaciente","Pacientes")"> Paciente</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-desktop"></i> Reportes <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="general_elements.html"> Pacientes</a></li>
                                        <li><a href="media_gallery.html"> Atenciones</a></li>
                                        <li><a href="typography.html"> Recetas</a></li>
                                    </ul>
                                </li>
                                @{
                                    if (oUsuario.PerfilID == 3)
                                    {
                                        <li>
                                            <a><i class="fa fa-heartbeat"></i> Admisión <span></span></a>
                                        </li>
                                    }
                                }
                                <li>
                                    <a href="@Url.Action("Calendario","Calendar")"><i class="fa fa-hospital-o"></i> Reservar Cita <span></span></a>
                                </li>
                                @{
                                    if (oUsuario.PerfilID == 2)
                                    {
                                        <li>
                                            <a><i class="fa fa-heartbeat"></i> Historia Clinica <span></span></a>
                                        </li>
                                        <li>
                                            <a><i class="fa fa-heartbeat"></i> Atención <span></span></a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" title="Settings">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                            <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Lock">
                            <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Logout" href="@Url.Content("~/Login/Index")">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>

            <!-- top navigation  panel arriba lado derecho-->
            <div class="top_nav">
                <div class="nav_menu">
                    <div class="nav toggle">
                        <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                    </div>
                    <nav class="nav navbar-nav">
                        <ul class=" navbar-right">
                            <li class="nav-item dropdown open" style="padding-left: 15px;">
                                <a href="javascript:;" class="user-profile dropdown-toggle" aria-haspopup="true" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false">
                                    <img src="~/Content/images/user.png" alt="">@(oUsuario.Nombre)
                                </a>
                                <div class="dropdown-menu dropdown-usermenu pull-right" aria-labelledby="navbarDropdown">                                    
                                    <a class="dropdown-item" href="@Url.Content("~/Login/Index")"><i class="fa fa-sign-out pull-right"></i> Log Out</a>
                                </div>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- Page Content -->
            <div class="right_col" role="main">
                @RenderBody()
            </div>
            <!-- \Page Content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Pag. Clinica dental by <a href="">Daniel Arroyo Alvarado</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
    <!-- Scripts -->

    <script src="~/vendors/jquery/dist/jquery.min.js"></script>
    <script src="~/vendors/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendors/moment/min/moment.min.js"></script>
    <script src="~/Content/js/custom.js"></script>

    @RenderSection("scripts", required: false)
    <!-- \Scripts -->

</body>
</html>
